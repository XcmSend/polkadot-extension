{
  "author": "polkadot.{js}forked",
  "description": "Manage your Polkadot accounts outside of dapps. Injects the accounts and allows signing transactions for a specific account.",
  "homepage_url": "https://github.com/polkadot-js/extension",
  "name": "polkadot{.js} forked extension",
  "short_name": "polkadot{.js}forked",
  "manifest_version": 3,
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "action": {
    "default_title": "polkadot{.js}forked",
    "default_popup": "index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{7e3ce1f0-15fb-4fb1-99c6-25774749ec6d}",
      "strict_min_version": "108.0.2"
    }
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["http://*/*", "https://*/*"],
    "run_at": "document_start"
  }],
  "icons": {
    "16": "images/fork.png",
    "32": "images/fork.png",
    "48": "images/fork.png",
    "64": "images/fork.png",
    "128": "images/fork.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "page.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}