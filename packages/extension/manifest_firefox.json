{
  "author": "Beetle Web3",
  "description": "Manage your Polkadot accounts outside of dapps. Injects the accounts and allows signing transactions for a specific account.",
  "homepage_url": "https://github.com/decentration/beetle",
  "name": "Beetle Web3 extension",
  "short_name": "Beetle Web3",
  "manifest_version": 3,
"permissions": ["tabs", "storage", "activeTab", "scripting"],
"host_permissions": [
  "https://blink.bagpipes.io/*",
  "http://localhost:5173/*",
     "https://x.com/*"
],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "action": {
    "default_title": "Beetle Web3",
    "default_popup": "index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{7e3ce1f0-15fb-4fb1-99c6-25774749ec6d}",
      "strict_min_version": "108.0.2"
    }
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["http://*/*", "https://*/*"],
    "run_at": "document_idle",
    "all_frames": true
  }],
  "icons": {
    "16": "images/16-green-gold-beetl.png",
    "32": "images/32-green-gold-beetl.png",
    "48": "images/48-green-gold-beetl.png",
    "64": "images/64-green-gold-beetl.png",
    "128": "images/128-green-gold-beetl.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "page.js",
        "blinks-app/*",
        "blinks-app/assets/*.wasm",
        "blinks-app/*.wasm"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}